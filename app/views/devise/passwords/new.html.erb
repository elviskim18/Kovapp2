<main class="text-center form-signin">
  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= image_tag "kovapp.png", class: "mx-auto mb-4", alt: ""%>
    <h1 class="h3 mb-3 fw-normal">Forgot Your Password?</h1>
    <br>
    <%= f.error_notification %>

    <div class="form-inputs">
      <div class="form-floating">
        <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: "form-control" } %>
      </div>
    </div>

    <br>
    <div class="form-actions">
      <%= f.button :submit, "Get Reset Link", class: "w-100 btn btn-lg btn-primary" %>
    </div>
    <p class="mt-5 mb-3 text-muted">Â© 2021</p>
  <% end %>
  <%= render "devise/shared/links" %>
</main>